<!doctype html>
<html class="{{#toLowerCase title}}{{/toLowerCase}}" lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap/FontAwesome CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link rel="stylesheet" href="css/stylesheet.css">
        
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        
        {{#ifEquals title "Home"}}
            {{!-- <script type="text/javascript" src="js/parallax.js"></script> --}}
            <script type="text/javascript" src="js/scripts.js"></script>
            <script type="text/javascript" src="js/carousel.js"></script>
            <script type="text/javascript" src="js/charts.js"></script>
        {{/ifEquals}}
        <title>INDE601 - Netscapes</title>
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <a class="navbar-brand" href="/"><img class="navbar-img" src="img/logo-white.svg" alt="logo" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                    <ul class="navbar-nav mr-auto">
                        {{#unless user}}
                            <li class="nav-item">
                                <a {{#ifEquals title "Sign In"}}class="nav-link active"{{/ifEquals}} class="nav-link" href="/signin">Sign In</a>
                            </li>
                        {{/unless}}
                        <li class="nav-item">
                            <a {{#ifEquals title "Home"}}class="nav-link active"{{/ifEquals}} class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a {{#ifEquals title "Visualisations"}}class="nav-link active"{{/ifEquals}} class="nav-link" href="/visualisations">Visualisations</a>
                        </li>
                        <li class="nav-item">
                            <a {{#ifEquals title "About"}}class="nav-link active"{{/ifEquals}} class="nav-link" href="/about">About</a>
                        </li>
                        {{#if user}}
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">Logout</a>
                            </li>
                        {{/if}}
                    </ul>
                </div>
            </nav>
        </header>
        <main role="main" class="container">
            <div class="starter-template">
                {{#if message}}
                    <div class="alert alert-danger">{{message}}</div>
                {{/if}}
                {{{ body }}}
            </div>
        </main>
        <footer class="footer">
            <div class="container">
                <span class="text-muted">INDE601 - Netscapes</span>
            </div>
        </footer>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    </body>
</html>